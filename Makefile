all:
	gcc -std=c99 -m32 -g -z execstack -o runhex runhex.c
	gcc -std=c99 -g -z execstack -o runhex64 runhex.c

test:
	./runhex '\x31\xc9\x51\x68\x2f\x2f\x73\x68\x68\x2f\x62\x69\x6e\x89\xe3\x6a\x0b\x58\xcd\x80'
	./runhex64 '\x31\xf6\x48\xbb\x2f\x62\x69\x6e\x2f\x2f\x73\x68\x56\x53\x54\x5f\x6a\x3b\x58\x0f\x05'

install:
	ln -srf ./runhex ~/lnk/runhex
	ln -srf ./runhex64 ~/lnk/runhex64
